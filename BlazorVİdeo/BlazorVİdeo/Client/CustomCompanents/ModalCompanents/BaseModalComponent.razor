

@code {
    [Parameter]
    public String Message{ get; set; }

    [Parameter]
    public String OkText{ get; set; }

    [Parameter]
    public String CancelText{ get; set; }

    [Parameter]
    public String YesText{ get; set; }

    [Parameter]
    public String NoText{ get; set; }


    [CascadingParameter]

    BlazoredModalInstance ModelInstance { get; set; }

    protected async Task ConfirmClicked()
    {
        await ModelInstance.CloseAsync(ModalResult.Ok<String>(""));
    }

     protected async Task CancelClicked()
    {
        await ModelInstance.CloseAsync(ModalResult.Cancel());
    }
}
